# Server Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here

# Cache Configuration
CACHE_TTL=300
REFRESH_INTERVAL_MINUTES=2

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Monitoring (optional)
ENABLE_METRICS=true
METRICS_PORT=9090

# Webhooks (optional)
WEBHOOK_URL=
WEBHOOK_ON_ERROR=true
WEBHOOK_ON_SUCCESS=false
