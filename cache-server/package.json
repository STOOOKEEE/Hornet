{
  "name": "hornet-cache-server",
  "version": "1.0.0",
  "description": "Cache server for DeFiLlama + Gemini AI analysis",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "node --test",
    "docker:build": "docker build -t hornet-cache-server .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop hornet-cache",
    "pm2:restart": "pm2 restart hornet-cache",
    "pm2:logs": "pm2 logs hornet-cache"
  },
  "keywords": [
    "defi",
    "cache",
    "gemini",
    "defillama"
  ],
  "author": "Hornet Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "redis": "^4.6.12",
    "node-cron": "^3.0.3",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "axios": "^1.6.5",
    "axios-retry": "^4.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
